# Environment Variables for Bun Scripts
# (K6 tests use config/config.js instead)

# Environment Selection (matches config.js environments)
ENVIRONMENT=local

# API Configuration for Bun Scripts
# Note: K6 tests use config/config.js for base URLs
# Only set these if Bun scripts need different URLs
# BASE_URL=http://localhost:3000/api/v1

# Test User Credentials (DO NOT commit real credentials)
# These are used by Bun scripts for setup/cleanup
TEST_ADMIN_USERNAME=admin@example.com
TEST_ADMIN_PASSWORD=Admin@1234
TEST_USER_USERNAME=user@example.com
TEST_USER_PASSWORD=User@1234

# Prometheus Configuration (for docker-compose)
PROMETHEUS_URL=http://localhost:9090/api/v1/write
K6_PROMETHEUS_RW_PUSH_INTERVAL=5s

# Grafana Configuration (for docker-compose)
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Optional: Cloud/Remote Test Execution
# K6_CLOUD_TOKEN=your_cloud_token
# K6_CLOUD_PROJECT_ID=your_project_id
