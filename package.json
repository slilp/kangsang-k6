{
  "name": "kangsang-k6",
  "version": "1.0.0",
  "description": "K6 performance and regression testing suite with Prometheus/Grafana monitoring",
  "type": "module",
  "scripts": {
    "test:regression": "k6 run tests/regression/",
    "test:performance": "k6 run tests/performance/",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup:data": "bun run tests/utils/axios-example.js setup",
    "cleanup:data": "bun run tests/utils/axios-example.js cleanup"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/k6": "^0.52.0",
    "@types/bun": "latest"
  }
}
